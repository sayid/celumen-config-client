#!/usr/bin/env php
<?php
/**
 * 重新构建GEnv公共配置包
 * Created by PhpStorm.
 * User: zhangyubo
 * Date: 2019/4/11
 * Time: 14:40
 */
foreach ([__DIR__ . '/vendor/autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/../../autoload.php', __DIR__ . '/../../../autoload.php', __DIR__ . '/../../../../autoload.php'] as $file) {
    if (file_exists($file)) {
        define('COMPOSER_INSTALL', $file);
        break;
    }
}
unset($file);
if (!defined('COMPOSER_INSTALL')) {
    fwrite(STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'wget http://getcomposer.org/composer.phar' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    die(1);
}
require COMPOSER_INSTALL;
$root = substr(dirname(__DIR__), 0, -22);
InitEnv($root);
ReloadGEnv($root);